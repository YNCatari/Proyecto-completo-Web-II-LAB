
@{
    Layout = null;
    ProyectoWebReservaHotel.Models.cliente cliente = ViewBag.cliente;
    ProyectoWebReservaHotel.Models.habitacion habitacion = ViewBag.habitacion;
    ProyectoWebReservaHotel.Models.reserva reserva = ViewBag.reserva;
    ProyectoWebReservaHotel.Models.pago pago = ViewBag.pago;
    ProyectoWebReservaHotel.Models.trabajador trabajador = ViewBag.trabajador;
}

<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <!-- Custom Style -->
    <link rel="stylesheet" href="~/Source/_estilo_login/_css/style3.css">

    <title>Comprobate de Pago</title>
</head>

<body>
    <div class="my-5 page" size="A4">
        <div class="p-5">
            <section class="top-content bb d-flex justify-content-between">
                <div class="logo">
                    <img src="~/Source/_estilo_login/images/logo.png" alt="" class="img-fluid">
                </div>
                <div class="top-left">
                    <div class="graphic-path">
                        <p>Factura</p>
                    </div>
                    <div class="position-relative">
                        <p>Factura No. <span>@pago.num_comprobante</span></p>
                    </div>
                </div>
            </section>

            <section class="store-user mt-5">
                <div class="col-12">
                    <div class="row bb pb-3">
                        <div class="col-4">
                            <p>Empresa,</p>
                            <h3>Hotel Santa Maria</h3>
                            <p class="address">
                                Av. Leguia 455 23001,
                                <br> Tacna, Perú
                            </p>
                            <div class="txn mt-2">RUC: 0230050262914</div>
                        </div>
                        <div class="col-4">
                            <p>Cliente,</p>
                            <h3>@(cliente.nombres) @(cliente.apellidos)</h3>
                            <p>Direccion: <span>@cliente.direccion</span></p>
                            <p>Correo: <span>@cliente.email</span></p>
                            <div class="txn mt-2">@cliente.tipo_documento : <span>@cliente.numero_documento</span></div>
                        </div>
                        <div class="col-4">
                            <p>Trabajador,</p>
                            <h3>@(trabajador.nombres) @(trabajador.apellidos)</h3>
                            <p>Cargo: <span>@trabajador.tipo_trabajador.descripcion</span></p>
                            <p>Direccion: <span>@trabajador.direccion</span></p>
                            <p>Correo: <span>@trabajador.email</span></p>
                            <div class="txn mt-2">@trabajador.tipo_documento : <span>@trabajador.numero_documento</span></div>
                        </div>
                    </div>
                    <div class="row extra-info pt-3">
                        <div class="col-7">
                            <p>Numero de Habitacion: <span>@habitacion.numero</span></p>
                            <p>Tipo de Habitacion: <span>@habitacion.tipo_habitacion.descripcion</span></p>
                        </div>
                        <div class="col-5">
                            <p>Descripcion: <span>@habitacion.descripcion</span></p>
                            <p>Precio: <span>@habitacion.precio_diario</span></p>
                        </div>
                        <hr />
                    </div>
                    <hr />

                    <div class="row extra-info pt-0">
                        <div class="col-7">
                            <p>Fecha de Entrada: <span>@reserva.fecha_ingreso</span></p>
                            <p>Fecha de Pago: <span>@pago.fecha_pago</span></p>
                        </div>
                        <div class="col-5">
                            <p>Fecha de Salida: <span>@reserva.fecha_salida</span></p>
                        </div>
                    </div>

                </div>
            </section>

            <section class="product-area mt-4">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <td>Descripcion</td>
                            <td>Precio</td>
                            <td>Cantidad</td>
                            <td>Total</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="media">
                                    @*<img class="mr-3 img-fluid" src="~/Source/img/cama.png" alt="Product 01">*@
                                    <div class="media-body">
                                        <p class="mt-0 title">@(habitacion.numero) @(habitacion.tipo_habitacion.descripcion)</p>
                                        <p class="mt-0 description-left"> @(habitacion.descripcion) </p>
                                    </div>
                                </div>
                            </td>
                            <td>@habitacion.precio_diario</td>
                            <td>@(reserva.fecha_salida.Day-reserva.fecha_ingreso.Day)</td>
                            <td>@pago.total_pago</td>
                        </tr>
                        
                    </tbody>
                </table>
            </section>

            <section class="balance-info">
                <div class="row">
                    <div class="col-8">
                        <p class="m-0 font-weight-bold"> Nota: </p>
                        <p>Cualquier reclamo puede acercarse a nuestra sede.</p>
                    </div>
                    <div class="col-4">
                        <table class="table border-0 table-hover">
                            <tr>
                                <td>IGV:</td>
                                <td>@pago.igv</td>
                            </tr>
                            <tfoot>
                                <tr>
                                    <td>Total:</td>
                                    <td>@pago.total_pago</td>
                                </tr>
                            </tfoot>
                        </table>

                        <!-- Signature -->
                        <div class="col-12">
                            <img src="~/Source/_estilo_login/images/signature.png" class="img-fluid" alt="">
                            <p class="text-center m-0"> Director Signature </p>
                        </div>

                    </div>
                </div>

            </section>

            <!-- Cart BG -->
            <img src="~/Source/_estilo_login/images/cart.jpg" class="img-fluid cart-bg" alt="">

            <footer>
                <hr>
                <p class="m-0 text-center">
                    Gracias por tu Preferencia Vuelve Pronto!
                </p>
                @*<a href="#!"> invoice/saburbd.com/#868 </a>*@
                <div class="social pt-3">
                    <span class="pr-2">
                        <i class="fas fa-mobile-alt"></i>
                        <span>+051-52-247702</span>
                    </span>
                    <span class="pr-2">
                        <i class="fas fa-mobile-alt"></i>
                        <span>+051 946792458</span>
                    </span>
                    <span class="pr-2">
                        <i class="fas fa-envelope"></i>
                        <span>santamariatacna@gmail.com</span>
                    </span>
                    <span class="pr-2">
                        <i class="fab fa-facebook-f"></i>
                        <span>Hotel Santa Maria Tacna</span>
                    </span>
                    <span class="pr-2">
                        <i class="fab fa-instagram"></i>
                        <span>Hotel Santa Maria Tacna</span>
                    </span>
                </div>
            </footer>
        </div>
    </div>
</body>
</html>