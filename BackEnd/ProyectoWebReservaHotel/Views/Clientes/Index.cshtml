
@model List<ProyectoWebReservaHotel.Models.cliente>
@{
    ViewBag.Title = "Index";
}
<!-- Page header -->
<div class="full-box page-header">
    <h3 class="text-left">
        <i class="fas fa-clipboard-list fa-fw"></i> &nbsp; LISTA DE CLIENTES
    </h3>
    <p class="text-justify">
       
    </p>
</div>

<div class="container-fluid">
    <ul class="full-box list-unstyled page-nav-tabs">
        <li>
            <a href="~/Clientes/AgregarCliente"><i class="fas fa-plus fa-fw"></i> &nbsp; AGREGAR CLIENTE</a>
        </li>
        <li>
            <a class="active" href="~/Clientes/Index"><i class="fas fa-clipboard-list fa-fw"></i> &nbsp; LISTA DE CLIENTES</a>
        </li>
    </ul>
</div>

@using (Html.BeginForm("Index", "Clientes", FormMethod.Post))
{
    <div class="text-left">
        @Html.Label("Buscar: ")
        @Html.TextBox("Criterio")
        <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
}
<!-- Content here-->
<div class="container-fluid">
    <div class="table-responsive">
        <table class="table table-dark table-sm">
            <thead>
                <tr class="text-center roboto-medium">
                    <th>#</th>
                    <th>DNI</th>
                    <th>NOMBRE</th>
                    <th>APELLIDO</th>
                    <th>TELEFONO</th>
                    <th>ESTADO</th>
                    <th>ACTUALIZAR</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr class="text-center">
                        <td>@(m.idcliente)</td>
                        <td>@(m.numero_documento)</td>
                        <td>@(m.nombres)</td>
                        <td>@(m.apellidos)</td>
                        <td>@(m.telefono)</td>
                        <td>@(m.estado == "A" ? "Activo" : "Inactivo")</td>
                        <td>
                            <a href="~/Clientes/AgregarCliente/@m.idcliente" class="btn btn-info">Modificar</a>
                            
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Previous</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>
    </nav>
</div>