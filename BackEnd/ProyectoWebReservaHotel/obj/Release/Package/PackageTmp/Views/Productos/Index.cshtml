@model List<ProyectoWebReservaHotel.Models.producto>
@{ ViewBag.Title = "Index"; }
<!-- Page header -->
<div class="full-box page-header">
    <h3 class="text-left">
        <i class="fas fa-clipboard-list fa-fw"></i> &nbsp; LISTA DE PRODUCTOS
    </h3>
    <p class="text-justify">

    </p>
</div>


<div class="container-fluid">
    <ul class="full-box list-unstyled page-nav-tabs">
        <li>
            <a href="~/Productos/AgregarProducto"><i class="fas fa-plus fa-fw"></i> &nbsp; AGREGAR PRODUCTO</a>
        </li>
        <li>
            <a class="active" href="~/Productos/Index"><i class="fas fa-clipboard-list fa-fw"></i> &nbsp; LISTA DE PRODUCTOS</a>
        </li>
    </ul>
</div>

<!-- Content here-->
<div class="container-fluid">
    @using (Html.BeginForm("Index", "Productos", FormMethod.Post))
    {
        <div class="text-left">
            @Html.Label("Buscar: ")
            @Html.TextBox("Criterio")
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    }
    <div class="table-responsive">
        <table class="table table-dark table-sm">
            <thead>
                <tr class="text-center roboto-medium">

                    <th>ID</th>
                    <th>NOMBRE</th>
                    <th>DESCRIPCION</th>
                    <th>CANTIDAD</th>
                    <th>PRECIO</th>
                    <th>ESTADOS</th>
                    <th>ACCIONES</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr class="text-center">
                    <td>@(item.idproducto)</td>
                    <td>@(item.nombre)</td>
                    <td>@(item.descripcion)</td>
                    <td>@(item.cantidad)</td>
                    <td>@(item.precio)</td>
                    <td>@(item.estado == "A" ? "Activo" : "Inactivo" )</td>
                    <td>
                        <a href="~/Productos/AgregarProducto/@item.idproducto" class="btn btn-success">Modificar</a>
                       
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

